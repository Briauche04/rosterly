/** Helper used by client/server components */
export function useLang(searchParams: { lang?: string } | undefined): Lang {
  const q = searchParams?.lang ?? "he";
  const l = String(q).toLowerCase();
  if (l === "en" || l === "ru") return l;
  return "he";
}
